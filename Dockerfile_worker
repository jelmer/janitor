FROM docker.io/debian:sid-slim AS build
MAINTAINER Jelmer Vernooij <jelmer@jelmer.uk>

ARG DEBIAN_FRONTEND=noninteractive
COPY . /code
RUN apt update && apt -y install auto-apt-proxy && apt install --no-install-recommends -y autoconf \
	apt-file \
	ssh \
	python3 \
	pristine-tar \
	devscripts \
	libpython3.10 \
	python3-pip \
	quilt \
	sbuild \
	autopkgtest \
	debootstrap \
	git-buildpackage \
	pristine-tar \
	lintian \
	perl-doc \
	dpkg \
	gnome-pkg-tools \
	subversion \
	ca-certificates \
	swig \
	libgpgme-dev \
	make \
	cython3 \
	rustc \
	libpython3-dev \
	cargo \
	debcargo \
	mypy-protobuf \
	protobuf-compiler \
	ca-certificates \
	&& apt clean \
	&& make -C /code \
	&& pip3 install "/code[gcp,debian]" \
	&& apt-file update

ENV AUTOPKGTEST=/code/autopkgtest-wrapper
EXPOSE 8080
ENTRYPOINT ["python3", "-m", "janitor.worker", "--port=8080", "--listen-address=0.0.0.0"]
