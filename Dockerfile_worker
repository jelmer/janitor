	python3-merge3 \
	python3-configobj \
	python3-jinja2 \
	python3-debian \
	python3-asyncpg \
	python3-protobuf \
	python3-yaml \
	python3-debianbts \
	python3-apt \
	python3-distro-info \
	devscripts \
	python3-prometheus-client \
	python3-gpg \
	python3-requirement-parser \
	python3-ruamel.yaml \
	python3-pcre \
	libpython3.10 \
	quilt \
	python3-psycopg2 \
	sbuild \
	autopkgtest \
	python3-iniparse \
	debootstrap \
	python3-bs4 \
	python3-lxml \
	git-buildpackage \
	pristine-tar \
	lintian \
	perl-doc \
	python3-patiencediff \
	python3-tomlkit \
	python3-aiohttp-openmetrics \
	python3-toml \
	python3-pip \
	dpkg \
	python3-semver \
	gnome-pkg-tools \
	python3-tr \
