# https://hub.docker.com/_/debian
FROM docker.io/debian:testing-slim AS build
MAINTAINER Jelmer Vernooij <jelmer@jelmer.uk>

ARG DEBIAN_FRONTEND=noninteractive

COPY ./scripts/ /usr/local/bin/

COPY . /code

COPY autopkgtest-wrapper /usr/local/bin/autopkgtest-wrapper

RUN apt-get update --yes \
 && apt-get install --yes --no-install-recommends \
        auto-apt-proxy \
        iproute2 \
 && apt-get satisfy --yes --no-install-recommends \
        build-essential \
        ca-certificates \
        cargo \
        libclang-dev \
        libpython3-dev \
        libssl-dev \
        libtdb-dev \
        pkg-config \
        protobuf-compiler \
        python3 \
 && apt-get clean \
 && cd /code \
 && cargo build --release -p janitor-worker



# https://hub.docker.com/_/debian
FROM docker.io/debian:testing-slim
MAINTAINER Jelmer Vernooij <jelmer@jelmer.uk>

# Enable forward compatibility with newer versions of Python
#ENV PYO3_USE_ABI3_FORWARD_COMPATIBILITY="1"

RUN apt-get update --yes \
 && apt-get install --yes --no-install-recommends \
        auto-apt-proxy \
        iproute2 \
 && apt-get upgrade --yes \
 && apt-get satisfy --yes --no-install-recommends \
     ## Standard packages
      ca-certificates \
     #cargo \
     #gcc \
     #git \
     #libclang-dev \
     #libgpgme-dev \
     #libpython3-dev \
     #libssl-dev \
     #libtdb-dev \
     #make \
      mypy-protobuf \
     #pkg-config \
     protobuf-compiler \
     #python3-gpg \
     #python3-pip \
     #python3-setuptools \
     #python3-setuptools-rust \
     #python3-wheel \
     #python3-wheel-whl \
     #rustc \
     #swig \
     ## Extra packages
      apt-file \
      autoconf \
      autopkgtest \
      debootstrap \
      devscripts \
      dpkg \
      git-buildpackage \
      gnome-pkg-tools \
      lintian \
      mypy-protobuf \
      perl-doc \
      pristine-tar \
      python3 \
      python3-breezy \
      quilt \
      sbuild \
      ssh \
      subversion \
 && apt-file update

COPY --from=build /code/target/release/janitor-worker /usr/local/bin/janitor-worker

ENV AUTOPKGTEST=/usr/local/bin/autopkgtest-wrapper

EXPOSE 8080

ENTRYPOINT ["/bin/janitor-worker", "--port=8080", "--listen-address=0.0.0.0"]
