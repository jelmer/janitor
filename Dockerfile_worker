	python3-setuptools \
	python3-setuptools-rust \
	ca-certificates \
	&& apt clean \
	&& make -C /code \
	&& pip3 install "/code[gcp]" \
	&& apt-file update

ENV AUTOPKGTEST=/code/autopkgtest-wrapper
EXPOSE 8080
ENTRYPOINT ["python3", "-m", "janitor.worker", "--port=8080", "--listen-address=0.0.0.0"]
