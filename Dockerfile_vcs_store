FROM ghcr.io/jelmer/janitor/base:latest
MAINTAINER Jelmer Vernooij <jelmer@debian.org>
VOLUME /vcs
EXPOSE 9923
RUN apt update && apt install -y python3-pip git python3-chardet && pip3 install klaus aiohttp-wsgi
ENTRYPOINT ["python3", "-m", "janitor.vcs_store", "--port=9923", "--listen-address=0.0.0.0"]
